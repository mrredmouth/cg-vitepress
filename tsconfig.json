{  
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    // "rootDir": "./docs/.vitepress/src",     // 源码放在 src 目录
    "baseUrl": ".",
    "paths": {
      "@/*": ["docs/.vitepress/src/*"],
      "@components/*": ["docs/.vitepress/src/components/*"]
    },
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "declaration": false,
    "lib": ["ESNext", "DOM"],
    "types": ["node"],
    "allowImportingTsExtensions": true, // 允许导入带有 .ts 扩展名的模块
    "noEmit": true  // 不生成输出文件, 与 allowImportingTsExtensions 一起使用
  },
  "include": [
    "docs/.vitepress/**/*.ts",
    "docs/.vitepress/**/*.mts"
  ]
}
